@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@using FZTHMVC.DataAccess
@model IEnumerable<Hotel>

<h2>Index</h2>

<div class="row">
    <aside class="col-md-3">
        <ul class="asideMenu">
            <h3>Page navigation</h3>
            <li><a href="#reservation">Reservation Form</a></li>
            <li><a href="#hotelList">Hotel List</a></li>
            <li><a href="#lastMinute">Last minute deals</a></li>
        </ul>
    </aside>
    <article class="col-md-9">

        <section id="reservation" class="col-md-5 col-md-offset-2">
            <form class="form-horizontal">
                <legend>Reservation Form</legend>
                <div class="form-group">
                    <label for="cityList">City</label>
                    <select name="cityList" class="form-control">
                        <option>Select a city</option>
                        <option>Iasi</option>
                        <option>Bacau</option>
                        <option>Bucuresti</option>
                        <option>Londra</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="checkInDate">Check-In</label>
                    <input type="Date" id="checkInDate" class="form-control" />
                    <label for="checkOutDate">Check-Out</label>
                    <input type="Date" id="checkOutDate" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success">Search</button>
            </form>
        </section>
        <section id="hotelList" class="col-md-10 col-md-offset-1">
            <table border=1 class="table table-striped table-hover">
                <tr class="info">
                    <th>Nume</th>
                    <th>Adresa</th>
                    <th>Oras</th>
                    <th>Site</th>
                    <th>Numar camere</th>
                    <th>Numar stele</th>
                    <th>Create</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>

                
                @foreach (var h in Model)
                {
                   <tr>
                        <td>@h.Name</td>
                        <td>@h.Adress</td>
                        <td>@h.City</td>
                        <td>@h.Site</td>
                        <td>@h.Rooms</td>
                        <td>
                            @for (int i = 0; i < h.Rating; i++)
                            {
                                <img src="Content/Images/star.jpg" />
                            }
                        </td>
                       <td>@Html.ActionLink("Create", "Create")</td>
                       <td>@Html.ActionLink("Edit", "Edit", new { id=h.Id })</td>
                       <td>@Html.ActionLink("Delete", "Delete", new { id = h.Id })</td>
                    </tr> 
                }
                @*foreach (Hotel h in Data.Hotels)
                {
                    <tr>
                        <td>@h.Name</td>
                        <td>@h.Adress</td>
                        <td>@h.City</td>
                        <td>@h.Site</td>
                        <td>@h.Rooms</td>
                        <td>
                            @for (int i = 0; i < h.Rating; i++)
                            {
                                <img src="Content/Images/star.jpg" />
                            }
                        </td>
                    </tr>
                }*@
            </table>
        </section>

        <section id="lastMinute" class="col-md-12">
            <h1 class="col-md-offset-1">Last Minute deals</h1>
            <div class="col-md-offset-2">
                <h3> Hotel Creek </h3>
                <img src="Content\Images\creek.jpg" style="width:100px" class="img-rounded" />
                <p class="text-success"> 20% discount</p>
            </div>
            <div class="col-md-offset-2">
                <h3> Hotel Tulip </h3>
                <img src="Content\Images\tulip.jpg" style="width:100px" class="img-rounded" />
                <p class="text-success"> 10% discount</p>
            </div>
            <div class="col-md-offset-2">
                <h3> Hotel International </h3>
                <img src="Content\Images\international.jpg" style="width:100px" class="img-rounded" />
                <p class="text-success"> 50% discount</p>

            </div>
        </section>
    </article>
</div>